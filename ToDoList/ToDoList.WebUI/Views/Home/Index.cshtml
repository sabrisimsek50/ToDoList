@model ICollection<ToDoList.Entities.EventList>


@{
	ViewBag.Title = "Home Page";
}
@section style{
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
}


<div class="portlet light portlet-fit bordered">
	<div class="portlet-title">


	</div>
	<div class="portlet light">
		<div class="portlet-body" id="complaintPartial">
			<div class="">
				<div id="tables">
					<table class="table table-striped table-bordered table-hover table_button" id="table_button1">

						<thead>
							<tr>

								<th># </th>
								<th>Title</th>
								<th>Content</th>
								<th>Date</th>
								<th>Time</th>
								<th>#</th>


							</tr>
						</thead>
						<tbody id="tableBody">
							@if (Model.Count > 0)
							{
								{
									var i = 0;
									foreach (var item in Model)
									{
										i++;
										<tr data-id="@item.Id">
											<td>@i</td>
											<td>@item.Title</td>
											<td>@item.Content</td>
											<td>@item.Date</td>
											<td>@item.Time</td>
											<td class="text-center">

												<a href="@Url.Action("Update", "Home", new { Id = item.Id })"><i class=" fa fa-edit btn btn-primary"></i></a>
												<a href="javascript:void(0)" onclick="DeleteToDoList(@item.Id)"><i class="btn btn-danger fa fa-remove btn btn-primary"></i></a>


											</td>

										</tr>
									}
								}
							}

						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
	<a href="@Url.Action("Add","Home")" class=" btn btn-primary">Add</a>
</div>





@section scripts{
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
	<script>$("#table_button1").dataTable();</script>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/Application/ToDoList.js"></script>

}