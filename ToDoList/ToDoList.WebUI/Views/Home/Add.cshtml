@model ToDoList.WebUI.Models.EventListRequestModel

@{
	ViewBag.Title = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
}

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { @id = "AddToDoList", enctype = "multipart/form-data" }))
{
	<div class="form-horizontal">
		@Html.AntiForgeryToken()

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">

			@Html.LabelFor(q => q.Title, htmlAttributes: new { @class = "control-label col-md-3" })

			<div class="col-md-9">
				@Html.EditorFor(q => q.Title, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(q => q.Title, "", new { @class = "text-danger" })
			</div>

		</div>
		<div class="form-group">

			@Html.LabelFor(q => q.Content, htmlAttributes: new { @class = "control-label col-md-3" })

			<div class="col-md-9">
				@Html.EditorFor(q => q.Content, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(q => q.Content, "", new { @class = "text-danger" })
			</div>

		</div>
		<div class="form-group">

			@Html.LabelFor(q => q.Date, htmlAttributes: new { @class = "control-label col-md-3" })

			<div class="col-md-9">
				@Html.EditorFor(q => q.Date, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(q => q.Date, "", new { @class = "text-danger" })
			</div>

		</div>
		<div class="form-group">

			@Html.LabelFor(q => q.Time, htmlAttributes: new { @class = "control-label col-md-3" })

			<div class="col-md-9">
				@Html.EditorFor(q => q.Time, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(q => q.Time, "", new { @class = "text-danger" })
			</div>

		</div>
		<div class="form-group">
			<div class="col-md-offset-4 col-md-10">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
	</div>
}


@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/Scripts/Application/ToDoList.js"></script>
}
